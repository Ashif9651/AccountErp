<!DOCTYPE html>
<html>
<head>
  <title>Quotation Form</title>
  <link rel="stylesheet" href="/styleSheet/Quotation.css">
</head>
<body>

  <%- include('./nav.ejs') %>
  <div class="container">
    <h1>Quotation Form</h1>
    <form action="/quotation_data" method="post">
      <div class="form-div">
        <label for="companyName">Company Name:</label>
      <input type="text" id="companyName" name="companyName" required>

      <label for="address">Address:</label>
      <input type="text" name="address" id="" placeholder="Address" required>

      <label for="phoneNumber">Phone Number:</label>
      <input type="number" id="phoneNumber" name="phoneNumber" required>

      <label for="email">Email ID:</label>
      <input type="email" id="email" name="email" required>

      <label for="purpose">Purpose:</label>
      <input type="text" id="purpose" name="purpose" required>

      <label for="quotationNumber">Quotation Number:</label>
      <input type="number" id="quotationNumber" name="quotationNumber" required>

      <label for="expiryDate">Date Expiry:</label>
      <input type="date" id="expiryDate" name="expiryDate" required>
      </div>

      <table >
        <thead>
          <tr>
            <th>Name/Description</th>
            <th>Print</th>
            <th>Quantity</th>
            <th>Total</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><input type="text" name="product1Name"></td>
            <td><input type="text" name="product1Print"></td>
            <td><input type="number" name="product1Quantity"></td>
            <td><input type="number" name="product1Total"></td>
          </tr>
          <tr>
            <td><input type="text" name="product2Name"></td>
            <td><input type="text" name="product2Print"></td>
            <td><input type="number" name="product2Quantity"></td>
            <td><input type="number" name="product2Total"></td>
          </tr>
          
        </tbody>
      </table>

      <input type="submit" value="Register" class="btn-submit">
    </form>
  </div>
</body>
</html>